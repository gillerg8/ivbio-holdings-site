{
	"extends": ["plugin:prettier/recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"rules": {
		"semi": ["error", "always"],
		"no-unused-vars": [
			"error",
			{"vars": "all", "args": "after-used", "ignoreRestSiblings": false}
		],
		"no-console": ["error", {"allow": ["warn", "error", "log"]}],
		"no-dupe-args": "error",
		"eqeqeq": ["error", "smart"],
		"no-empty-function": "error",
		"no-else-return": "off",
		"no-eval": "error",
		"prettier/prettier": "error"
	},
	"plugins": ["react"]
}
